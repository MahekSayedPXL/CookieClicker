<Window x:Class="BlackJack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackJack"
        mc:Ignorable="d"
        Title="BlackJack" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/background.jpg" />
        </Grid.Background>
        <StackPanel VerticalAlignment="Center">
            <DockPanel HorizontalAlignment="Center">
                <Label Content="Cookies: " FontSize="25" FontWeight="Bold" Foreground="White"/>
                <Label Name="lblScore" Content="0" FontSize="25" FontWeight="Bold" Foreground="White"/>
            </DockPanel>
            <Image Name="imgCookie" Source="/cookie-removebg-preview.png" Width="260" Height="260" MouseUp="CookiePress_MouseUp" MouseDown="CookieLose_MouseDown"/>
        </StackPanel>
        <Border Grid.Column="1" Background="White">
            <Label Content="Cookie Clicker" HorizontalAlignment="Center" FontWeight="Bold" FontSize="30" Foreground="#FFD26A90"/>
        </Border>
        <StackPanel Grid.Column="2" VerticalAlignment="Center" Background="#FFD26A90" d:IsLocked="True" >
            <Label Content="Store" Height="50" FontSize="25" HorizontalAlignment="Center" />
            <Label Content="+0.0"/>
            <Button Name="btnCursor" Height="50" IsEnabled="False">
                <DockPanel>
                    <Image Source="/cursor-removebg-preview (1).png" Width="50"/>
                    <StackPanel>
                        <Label Content="Cursor"  Width="180" HorizontalContentAlignment="Center"/>
                        <Label Content="15"/>
                    </StackPanel>
                    <Label Content="0" FontSize="25" HorizontalAlignment="Right"/>
                </DockPanel>
            </Button>
            <Button Name="btnGrandma" Height="50" IsEnabled="False">
                <DockPanel>
                    <Image Source="/grandma-removebg-preview.png" Width="50"/>
                    <StackPanel>
                        <Label Content="Grandma"  Width="180" HorizontalContentAlignment="Center"/>
                        <Label Content="100"/>
                    </StackPanel>
                    <Label Content="0" FontSize="25" HorizontalAlignment="Right"/>
                </DockPanel>
            </Button>
            <Button Name="btnFarm" Height="50" IsEnabled="False">
                <DockPanel>
                    <Image Source="/farm.jpg" Width="50"/>
                    <StackPanel>
                        <Label Content="Farm" Width="180" HorizontalContentAlignment="Center"/>
                        <Label Content="1100" DockPanel.Dock="Bottom"/>
                    </StackPanel>
                    <Label Content="0" FontSize="25" HorizontalAlignment="Right"/>
                </DockPanel>
            </Button>
            <Button Name="btnMine" Height="50" IsEnabled="False">
                <DockPanel>
                    <Image Source="/mine-removebg-preview.png" Width="50"/>
                    <StackPanel>
                        <Label Content="Mine" Width="180" HorizontalContentAlignment="Center"/>
                        <Label Content="12000" DockPanel.Dock="Bottom"/>
                    </StackPanel>
                    <Label Content="0"  FontSize="25" HorizontalAlignment="Right"/>
                </DockPanel>
            </Button>
            <Button Name="btnFactory" Height="50" IsEnabled="False">
                <DockPanel>
                    <Image Source="/factory-removebg-preview.png" Width="50"/>
                    <StackPanel>
                        <Label Content="Factory" Width="180" HorizontalContentAlignment="Center"/>
                        <Label Content="130000" DockPanel.Dock="Bottom"/>
                    </StackPanel>
                    <Label Content="0" FontSize="25" HorizontalAlignment="Right"/>
                </DockPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
